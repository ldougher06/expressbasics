<!DOCTYPE html>
<html>
<%- include('head', {page: 'Chicken | List Orders'}) %>
<body>
  <%- include('header') %>
  <h1>Orders</h1>
  <a href="/chickennuggets/order">New Order</a>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Flavor</th>
        <th>Qty</th>
        <th>Time</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% orders.forEach(function (order) { %>
        <tr>
          <td><%= order.name %></td>
          <td><%= order.flavor %></td>
          <td><%= order.qty %></td>
          <td><%= order.createdAt %></td>
          <td>
            <form action="/chickennuggets/order/<%= order._id %>/complete" method="post">
              <input type="submit" value="Complete">
            </form>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
  <%- include('javascripts') %>
</body>
</html>
